{
  "manifest_version": 2,
  "name": "XKCD Substitutions",
  "version": "1.8",
  "description": "Based on XKCD #1288",
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title": "XKCD Substitutions"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "XkcdSubstitution.js",
        "content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons":
  {
    "128": "icons/128.png"
  }
}

